class mymodule {
	file {"/home/cube/wall.sh":
		content => template ("mymodule/wall.sh"),
		owner => "cube",
		group => "cube",
		mode => 0755,
		notify => Exec['wallpaper'],
	}
	exec {"wallpaper":
		user => "cube",
		path => "/bin/:/usr/bin/:/sbin/:/usr/sbin/",
		environment => ["HOME=/home/cube"],
		cwd =>"/home/cube/",
		command => "xfconf-query -c xfce4-desktop -p /backdrop/screen0/monitor0/workspace0/last-image -s /home/cube/Desktop/oma.jpg"
	}
}
